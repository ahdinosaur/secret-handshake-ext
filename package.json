{
  "name": "secret-handshake-ext",
  "description": "A simple and highly private secure-channel protocol",
  "version": "0.0.9",
  "homepage": "https://github.com/staltz/secret-handshake-ext",
  "repository": {
    "type": "git",
    "url": "git://github.com/staltz/secret-handshake-ext.git"
  },
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "types": "types/index.d.ts",
  "engines": {
    "node": ">=16"
  },
  "exports": {
    ".": {
      "require": "./lib/index.js"
    },
    "./crypto": {
      "require": "./lib/crypto.js"
    },
    "./multiserver": {
      "require": "./lib/multiserver-plugin.js"
    },
    "./secret-stack": {
      "require": "./lib/secret-stack-plugin.js"
    }
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build",
    "typecheck": "tsc --build --clean",
    "prepublishOnly": "npm run build",
    "test": "npm-run-all typecheck test:original",
    "test:original": "node --test",
    "test:shs2-test": "npm-run-all test:shs2-test:*",
    "test:shs2-test:server": "shs2testserver test/shs2-test/server",
    "test:shs2-test:client": "shs2testclient test/shs2-test/client",
    "format-code": "prettier --write \"*.js\" \"(test|lib)/*.js\"",
    "format-code-staged": "pretty-quick --staged --pattern \"*.js\" --pattern \"(test|lib)/*.js\"",
    "coverage": "c8 --reporter=lcov npm run test"
  },
  "dependencies": {
    "b4a": "~1.6.4",
    "bs58": "~5.0.0",
    "debug": "^4.3.4",
    "pull-handshake": "~1.1.4",
    "pull-secret-channel": "^1.1.0",
    "pull-secret-handshake2": "^0.0.3",
    "pull-stream": "~3.7.0",
    "shs2-test": "github:ahdinosaur/shs2-test#v2",
    "sodium-universal": "~4.0.0"
  },
  "devDependencies": {
    "@types/b4a": "^1.6.0",
    "@types/debug": "^4.1.8",
    "@types/node": "^20.2.5",
    "@types/pull-stream": "^3.6.7",
    "c8": "^7.11.0",
    "chloride": "^2.4.1",
    "deep-equal": "^2.2.0",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "pull-bitflipper": "~0.1.0",
    "pull-defer": "^0.2.2",
    "pull-hang": "0.0.0",
    "shs1-test": "^1.1.0",
    "stream-to-pull-stream": "^1.7.3",
    "test-secret-handshake": "^1.0.0",
    "typescript": "^5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format-code-staged"
    }
  },
  "author": "Andre 'Staltz' Medeiros <contact@staltz.com>",
  "contributors": [
    "Dominic Tarr <dominic.tarr@gmail.com> (http://dominictarr.com)"
  ],
  "license": "MIT"
}
