{
  "name": "secret-handshake",
  "description": "a simple and highly private secure-channel protocol",
  "version": "0.0.1",
  "homepage": "https://github.com/staltz/secret-handshake-ext",
  "repository": {
    "type": "git",
    "url": "git://github.com/staltz/secret-handshake-ext.git"
  },
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=16"
  },
  "exports": {
    ".": {
      "require": "./lib/index.js"
    },
    "./crypto": {
      "require": "./lib/crypto.js"
    }
  },
  "scripts": {
    "test": "npm-run-all test:original",
    "test:original": "tape test/*.test.js | tap-arc --bail",
    "test:shs1-test": "npm-run-all test:shs1-test:*",
    "test:shs1-test:server": "shs1testserver test/shs1-test/server.js",
    "test:shs1-test:client": "shs1testclient test/shs1-test/client.js",
    "format-code": "prettier --write \"*.js\" \"(test|lib)/*.js\"",
    "format-code-staged": "pretty-quick --staged --pattern \"*.js\" --pattern \"(test|lib)/*.js\"",
    "coverage": "c8 --reporter=lcov npm run test"
  },
  "dependencies": {
    "sodium-universal": "^4.0.0",
    "pull-box-stream": "^1.0.13",
    "pull-handshake": "^1.1.1",
    "pull-stream": "^3.4.5"
  },
  "devDependencies": {
    "c8": "^7.11.0",
    "deep-equal": "^2.2.0",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "pull-bitflipper": "~0.1.0",
    "pull-defer": "^0.2.2",
    "pull-hang": "0.0.0",
    "shs1-test": "^1.1.0",
    "stream-to-pull-stream": "^1.7.3",
    "tap-arc": "0.3.5",
    "tape": "^5.6.3",
    "test-secret-handshake": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format-code-staged"
    }
  },
  "author": "Dominic Tarr <dominic.tarr@gmail.com> (http://dominictarr.com)",
  "contributors": [
    "Andre 'Staltz' Medeiros <contact@staltz.com>"
  ],
  "license": "MIT"
}
